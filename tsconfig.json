{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "declaration": true,
    "declarationDir": "./typings",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "outDir": "./dist/",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "typings"
  ]
}